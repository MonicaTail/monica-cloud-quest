        }
        #certificate h2 {
            font-size: 2.5em;
            color: #0056b3;
            margin-bottom: 20px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        #certificate p {
            font-size: 1.2em;
            margin-bottom: 15px;
        }
        #certificate .name {
            font-size: 1.8em;
            font-weight: bold;
            margin: 20px 0;
